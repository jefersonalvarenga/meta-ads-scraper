              },
              "category": {
                "label": "Category"
              },
              "likes": {
                "label": "Likes"
              },
              "followers": {
                "label": "Followers"
              },
              "phone": {
                "label": "Phone"
              },
              "rating": {
                "label": "Rating"
              }
            }
          }
        }
      }
    }
  }
