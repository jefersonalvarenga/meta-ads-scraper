  "version": "1.0.0",
  "meta": {
    "templateId": "playwright-js"
  },
  "input": "input_schema.json",
  "dockerfile": "./Dockerfile",
  "readme": "./README.md",
  "storages": {
    "dataset": {
      "actorSpecification": 1,
      "fields": {},
